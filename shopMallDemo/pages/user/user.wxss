page {
  background-color: rgba(231, 231, 231, 0.5);
}
.user-login {
  height: 300rpx;
  background: white;
}
.user-login button {
  color: #e83e3a;
  border: 1px solid #e83e3a;
  transform: translateY(100rpx);
}
.user-login .login-bg image{
  width:100%;
  height: 290rpx;
  filter: blur(25rpx);
}
.user-login .userInfo{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 75rpx;
  left: 300rpx;
}
.user-login .userInfo image{
  width: 150rpx;
  height: 150rpx;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 50%;
}
.userInfo .userInfo-username{
  position: absolute;
  transform: translateY(100rpx);
}
.user-order {
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-top: 20rpx;
  background: white;
}
.user-order .order-collection {
  width: 25%;
  text-align: center;
}
.user-order .order-collection .iconfont.icon-icon-test {
  font-size: 60rpx;
}
.user-order .order-received {
  width: 25%;
  text-align: center;
}
.user-order .order-received .iconfont.icon-daishouhuo {
  font-size: 60rpx;
}
.user-order .order-return {
  width: 25%;
  text-align: center;
}
.user-order .order-return .iconfont.icon-tuikuan {
  font-size: 60rpx;
}
.user-order .order-all {
  width: 25%;
  text-align: center;
}
.user-order .order-all .iconfont.icon-quanbudingdan {
  font-size: 60rpx;
}
