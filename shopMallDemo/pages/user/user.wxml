<view class="user-login">
  <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" wx:if="{{btn_condition}}">登录</button>
  <view class="userInfo">
      <image src="{{userhead}}"></image>
    <text>{{username}}</text>
  </view>
</view>

<view class="user-order">
  <view class="order-collection ">
    <view class="iconfont icon-icon-test"></view>
    <view class="text">代收款</view>
  </view>
  <view class="order-received">
    <view class="iconfont icon-daishouhuo"></view>
    <view class="text">待收货</view>
  </view>
  <view class="order-return">
    <view class="iconfont icon-tuikuan"></view>
    <view class="text">退货/退款</view>
  </view>
  <view class="order-all">
    <view class="iconfont icon-quanbudingdan"></view>
    <view class="text">全部订单</view>
  </view>
</view>

<view class="user-fb">
  <view class="fb-ctservice">
    <view class="left">
      <view class="iconfont icon-lianxikefu"></view>
      <view class="text">联系客服</view>
    </view>
    <view class="right">400-618-4000</view>
  </view>
  <view class="fb-givefb">
    <view class="left">
      <view class="iconfont icon-yijianfankui"></view>
      <view class="text">意见反馈</view>
    </view>
    <view class="right"></view>
  </view>
  <view class="fb-version">
    <view class="left">
      <view class="iconfont icon-ziyuan"></view>
      <view class="text">当前版本</view>
    </view>
    <view class="right">v4.1.1</view>
  </view>
</view>