.apt-index .search-input {
  height: 100rpx;
  background-color:var(--themeColor);
  display: flex;
  align-items: center;
  justify-content: center;
}
.apt-index .search-input navigator {
  width: 90%;
  height: 80rpx;
  color: #ccc;
  border-radius: 5px;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.apt-index .apt-index-nav {
  display: flex;
  height: 150rpx;
  align-items: center;
}
.apt-index .apt-index-nav image {
  flex: 1;
  height: 140rpx;
  width: 128rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.apt-index .apt-index-floorData .floor_title {
  margin: 10rpx;
  color: pink;
}
.apt-index .apt-index-floorData .product_list {
  display: flex;
  flex-wrap: wrap;
}
.apt-index .apt-index-floorData .product_list navigator {
  height: 188rpx;
  width: 33.33%;
  padding: 10rpx;
}
.apt-index .apt-index-floorData .product_list navigator image {
  width: 100%;
  height: 100%;
}
