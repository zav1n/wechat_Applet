.apt-my {
  background: #f9f9f9;
}
.apt-my .apt-my-profile {
  height: 400rpx;
  position: relative;
  background-color: white;
}
.apt-my .apt-my-profile button {
  position: absolute;
  top: 20%;
  left: 50%;
  color: red;
  transform: translateX(-50%);
  border: 1px solid red;
}
.apt-my .apt-my-profile .user-info-bg image {
  height: 400rpx;
  width: 100%;
  filter: blur(28rpx);
}
.apt-my .apt-my-profile .image_wrapper {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}
.apt-my .apt-my-profile .image_wrapper image {
  border-radius: 50%;
  height: 172rpx;
  width: 172rpx;
}
.apt-my .apt-my-profile .nickName {
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translateX(-50%);
  color: white;
}
.apt-my .apt-my-orderFunc {
  height: 150rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0 ;
  background-color: #fff;
}
.apt-my .apt-my-orderFunc .orderFunc-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.apt-my .apt-my-orderFunc .orderFunc-item .iconfont {
  font-size: 50rpx;
}
.apt-my .apt-my-orderFunc .orderFunc-item .text {
  font-size: 30rpx;
}
.apt-my .apt-my-systemFunc {
  background-color: white;
  height: 100%;
}
.apt-my .apt-my-systemFunc .systemFunc-item {
  padding: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
}
.apt-my .apt-my-systemFunc .systemFunc-item .left {
  display: flex;
  align-items: center;
}
.apt-my .apt-my-systemFunc .systemFunc-item .left .iconfont {
  color: #434343;
  font-size: 50rpx;
}
.apt-my .apt-my-systemFunc .systemFunc-item .left .text {
  margin-left: 30rpx;
  color: #434343;
  font-size: 30rpx;
}
.apt-my .apt-my-systemFunc .systemFunc-item .right {
  color: #ccc;
  font-size: 30rpx;
}
